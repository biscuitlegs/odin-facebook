<section class="box mt-4 mx-6">
  <p class="title has-text-centered">New Post</p>
  <%= render "posts/form", post: @post %>
</section>

<section class="box mx-6 mb-3">
  <% if params[:my_feed] %>
    <p class="title has-text-centered">My Feed</p>
  <% else %>
    <p class="title has-text-centered">Explore</p>
  <% end %>
  <%= render "posts/feed" %>
</section>

<%= javascript_pack_tag 'comment_form' %>
<%= javascript_pack_tag 'edit_post_form' %>